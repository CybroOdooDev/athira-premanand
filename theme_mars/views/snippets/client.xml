<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="mars_client" name="Mars Client Carousel">
        <section class="s_carousel_wrapper">
            <t t-set="uniq" t-value="datetime.datetime.now().microsecond"/>
            <div t-attf-id="myCarousel{{uniq}}"
                 class="s_carousel s_carousel_default carousel slide"
                 data-bs-interval="10000">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                    <li t-attf-data-bs-target="#myCarousel{{uniq}}"
                        data-bs-slide-to="0" class="active"/>
                    <li t-attf-data-bs-target="#myCarousel{{uniq}}"
                        data-bs-slide-to="1"/>
                    <li t-attf-data-bs-target="#myCarousel{{uniq}}"
                        data-bs-slide-to="2"/>
                </ol>
                <!-- Content -->
                  <!-- #01 -->
                <div class="carousel-inner">

                    <div class="main_heading text-center">
                        <h1>clients</h1>
                        <p>Our awesome clients we've had the pleasure to work
                            with!
                        </p>
                    </div>

                    <div class="carousel-item active oe_img_bg o_bg_img_center pt152 pb152"
                         data-name="Slide">
                        <div class="container oe_unremovable">
                            <div class="row content">
                                <div class="carousel-content">
                                    <div>
                                    </div>
                                </div>
                                <div class="client_slider">
                                    <div class="slider">
                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (1).png"/>
                                            </div>
                                        </div>

                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (2).png"/>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (3).png"/>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (4).png"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- #02 -->
                    <div class="carousel-item oe_img_bg o_bg_img_center pt96 pb96"
                         data-name="Slide">
                        <div class="container oe_unremovable">
                            <div class="row content">
                                <div class="carousel-content">
                                </div>
                                <div class="client_slider">
                                    <div class="slider">
                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (5).png"/>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (6).png"/>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (7).png"/>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (8).png"/>
                                            </div>
                                        </div>
                                        <div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!--                 #03-->
                    <div class="carousel-item oe_img_bg o_bg_img_center pt128 pb128"
                         data-name="Slide">
                        <div class="container oe_unremovable">
                            <div class="row content">
<!--                                <div class="main_heading text-center">-->
<!--                                    <h1>clients</h1>-->
<!--                                    <p>Our awesome clients we've had the-->
<!--                                        pleasure to work with!-->
<!--                                    </p>-->
<!--                                </div>-->
                                <div class="carousel-content">

                                </div>
                                <div class="client_slider">
                                    <div class="slider">
                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (9).png"/>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (10).png"/>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (6).png"/>
                                            </div>
                                        </div>
                                        <div>
                                            <div class="Partner_img">
                                                <img class="img_partner_image"
                                                     src="/theme_mars/static/src/Images/partners/p (7).png"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Controls -->
                <a class="carousel-control-prev o_not_editable"
                   contenteditable="false"
                   t-attf-href="#myCarousel{{uniq}}" data-bs-slide="prev"
                   role="img" aria-label="Previous"
                   title="Previous">
                    <span class="carousel-control-prev-icon"/>
                    <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next o_not_editable"
                   contenteditable="false"
                   t-attf-href="#myCarousel{{uniq}}" data-bs-slide="next"
                   role="img" aria-label="Next" title="Next">
                    <span class="carousel-control-next-icon"/>
                    <span class="visually-hidden">Next</span>
                </a>
            </div>
        </section>
    </template>
</odoo>
