    <template id="blogs_sidebar" inherit_id="website_blog.snippet_options" name="Sidebar Blog">
        <xpath expr="//div[@data-selector='main:has(#o_wblog_post_main)']/we-row[hasclass('o_we_full_row')]"
               position="after">
            <!--                <span>tttttttttttttttttttttttttttttttttt</span>-->
