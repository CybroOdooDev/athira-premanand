                           data-customize-website-views=""
                           data-no-preview="true"
                           data-reload="/"/>
                <we-button string="Sidebar Left Sticky" class="sidebar"
                           data-customize-website-views="theme_mars.sidebar_left_sticky"
                           data-no-preview="true"
                           data-reload="/"/>
                <we-button string="Sidebar Right Sticky" class="sidebar"
                           data-customize-website-views="theme_mars.sidebar_right_sticky"
                           data-no-preview="true"
                           data-reload="/"/>
            </we-select>
        </xpath>
        <xpath expr="//div[@data-selector='main:has(#o_wblog_post_main)']/we-row[hasclass('o_we_full_row')]"
