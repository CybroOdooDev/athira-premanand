<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Gallery infinity scroll layout-->
    <template id="theme_gallery_infinity_scroll"
              inherit_id="theme_mars.mars_gallery_section"
              name="Infinity Scroll">
        <xpath expr="//div[hasclass('im_gallery')]" position="replace">
            <div class="container oe_structure im_gallery">
                <div class="image-container-4">
                    <div class="row">
                        <div class="row infinite_scroll">
                            <t t-foreach="result" t-as="image">
                                <div class="gallery_images image-item-4 infinity_image">
                                    <img t-attf-src="data:image/png;base64,{{image.image_gallery}}"/>
                                </div>
                            </t>
                        </div>
                    </div>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
