    <template id="mars_counter" name="Banner Counter">
        <section class="counter_main">
            <div class="overlay">
                <div class="container">
                    <div id="counter-section-container">
                        <div id="counter-box-container">
                            <div id="counter-box">
                                <div class="c_icon">
                                    <i class="fa bi bi-code-slash"/>
                                </div>
                                <!--                                <span class="counter" data-number="150000">150000</span>-->
                                <!--                                <div class="counter">-->
                                <!--                                    <div class="charts" data-percent="95" data-bar-color="#ff4241">-->
