                                                <img style="width:250px; object-fit:cover; height:250px;"
                                                     t-attf-src="data:image/png;base64,{{img['portfolio_image']}}"
                                                     class="img-responsive data_img modal-img"
                                                     t-att-value="img['portfolio_image']"
                                                     id="data_img"/>
                                            </a>
                                        </div>
                                    </div>
                                </t>
                                <t t-if="image.group_type == 'carousel'">
                                    <div class="col-lg-6 p-0 col-md-6">
                                        <div t-attf-id="o-carousel-product-{{count}}"
                                             class="carousel slide position-sticky overflow-hidden"
                                             data-bs-ride="carousel"
                                             data-bs-interval="0"
                                             t-att-data-name="product_carousel_block_name">
                                            <div class="o_carousel_product_outer carousel-outer position-relative flex-grow-1">
                                                <div class="carousel-inner h-100">
                                                    <t t-set="image_classes"
                                                       t-value="'d-flex align-items-center justify-content-center h-100'"/>
                                                    <t t-set="flag"
                                                       t-value="True"/>
                                                    <t t-foreach="image.image_group_ids"
                                                       t-as="img">
                                                        <t t-if="flag == True">
                                                            <div t-attf-class="carousel-item h-100#{' active'}">
                                                                <img style="width:250px; object-fit:cover; height:250px;"
                                                                     t-attf-src="data:image/png;base64,{{img['portfolio_image']}}"
                                                                     class="img-responsive carousel-img"/>
                                                            </div>
                                                        </t>
                                                        <t t-set="flag"
                                                           t-value="False"/>
                                                        <div t-attf-class="carousel-item h-100">
                                                            <img style="width:250px; object-fit:cover; height:250px;"
                                                                 t-attf-src="data:image/png;base64,{{img['portfolio_image']}}"
                                                                 class="img-responsive carousel-img"/>
                                                        </div>
                                                    </t>
                                                    <a class="carousel-control-prev"
                                                       t-attf-href="#o-carousel-product-{{count}}"
                                                       role="button"
                                                       data-bs-slide="prev">
                                                        <span class="fa fa-chevron-left fa-2x oe_unmovable"
                                                              role="img"
                                                              aria-label="Previous"
                                                              title="Previous"/>
                                                    </a>
                                                    <a class="carousel-control-next"
                                                       t-attf-href="#o-carousel-product-{{count}}"
                                                       role="button"
                                                       data-bs-slide="next">
                                                        <span class="fa fa-chevron-right fa-2x oe_unmovable"
                                                              role="img"
                                                              aria-label="Next"
                                                              title="Next"/>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                                <t t-set="flag" t-value="false"/>
                            </t>
                        </t>
                        <t t-set="count" t-value="count+1"/>
                    </t>
                </div>
            </section>
        </t>
    </template>
    <!--    Portfolio layout-->
    <record id="mars_portfolio" model="website.page">
        <field name="name">Portfolio</field>
        <field name="type">qweb</field>
        <field name="key">theme_mars.mars_portfolio</field>
        <field name="url">/portfolio</field>
        <field name="is_published">True</field>
        <field name="arch" type="xml">
            <t name="About" t-name="theme_mars.mars_portfolio">
                <t t-call="website.layout">
                    <div id="wrap" class="o_mars_portfolio_page">
                        <section class="banner_services banner_portfolio">
                            <div class="wrapper">
                                <div class="content title">
                                    <h2>Portfolio Filter Styles</h2>
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb ">
                                            <li class="breadcrumb-item">
                                                <a href="/">
                                                    Home
                                                    <i class="arrow right"/>
                                                </a>
                                            </li>
                                            <li class="breadcrumb-item">
                                                <a href="/portfolio">
                                                    Portfolio
                                                    <i class="arrow right"/>
                                                </a>
                                            </li>
                                            <li class="breadcrumb-item active"
                                                aria-current="page">Filter
                                                Styles
                                            </li>
                                        </ol>
                                    </nav>
                                </div>
                            </div>
                        </section>
                        <t t-call="theme_mars.mars_portfolio_outlines"/>
                        <div class="oe_structure"/>
                    </div>
                </t>
            </t>
            <script>
                $(document).ready(function(){
                $(".filter-button").click(function(){ var value =
                $(this).attr('data-filter'); if(value == "All") {
                //$('.filter').removeClass('hidden');
                $('.filter').show('1000');
                } else {
                $(".filter").not('.filter[filter-item="'+value+'"]').addClass('hidden');
                $(".filter").not('.'+value).hide('3000');
                $('.filter').filter('.'+value).show('3000'); } }); if
                ($(".filter-button").removeClass("active")) {
                $(this).removeClass("active"); } $(this).addClass("active");
                });
            </script>
        </field>
    </record>
