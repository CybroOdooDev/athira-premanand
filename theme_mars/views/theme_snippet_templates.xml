<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Editor options for website header-->
    <template id="snippet_options_header_mars"
              inherit_id="website.snippet_options" name="Template Header Mars">
        <xpath expr="//we-button[@data-name='header_magazine_opt']"
               position="after">
