<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    website editor options for sidebar selection in blog page-->
    <template id="mars_tags" inherit_id="theme_mars.dynamic_blog"
              name="Blog Tags">
        <xpath expr="//div[hasclass('row')]" position="after">
            <div class="wrapper">
            </div>
        </xpath>
    </template>
    <template id="blogs_sidebar" inherit_id="website_blog.snippet_options"
              name="Sidebar Blog">
        <xpath expr="//div[@data-selector='main:has(#o_wblog_post_main)']/we-row[hasclass('o_we_full_row')]"
               position="after">
            <div data-js="" data-page-options="true"
                 groups="website.group_website_designer"
                 data-no-check="true" string="Gallery">
                <we-select string="Dynamic Blogs"
                           class="o_we_user_value_widget o_we_sublevel_1">
                    <we-button string="Sidebar Left Nonsticky" class="sidebar"
                               data-customize-website-views="theme_mars.blog_left_sidebars"
                               data-no-preview="true"
                               data-reload="/"/>
                    <we-button string="Sidebar Right Nonsticky" class="sidebar"
                               data-customize-website-views="theme_mars.blog_sidebar_right"
                               data-no-preview="true"
                               data-reload="/"/>
                    <we-button string="Disable Sidebar" class="sidebar"
                               data-customize-website-views="theme_mars.disable_blog_sidebar"
                               data-no-preview="true"
                               data-reload="/"/>
                    <we-button string="Sidebar Left Sticky" class="sidebar"
                               data-customize-website-views="theme_mars.sidebar_left_sticky"
                               data-no-preview="true"
                               data-reload="/"/>
                    <we-button string="Sidebar Right Sticky" class="sidebar"
                               data-customize-website-views="theme_mars.sidebar_right_sticky"
                               data-no-preview="true"
                               data-reload="/"/>
                </we-select>
            </div>
        </xpath>
        <xpath expr="//div[@data-selector='main:has(#o_wblog_post_main)']/we-row[hasclass('o_we_full_row')]"
               position="replace">
        </xpath>
        <xpath expr="//we-checkbox[@data-name='blog_posts_sidebar_opt']" position="replace" />
    </template>
</odoo>
