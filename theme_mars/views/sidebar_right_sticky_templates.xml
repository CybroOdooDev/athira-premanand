<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!--    Sticky right sidebar-->
    <template id="sidebar_right_sticky" inherit_id="theme_mars.dynamic_blog"
              name="Blog Right Sticky">
        <xpath expr="//div[hasclass('responsive_sidebar')]" position="attributes">
            <attribute name="class">col-lg-3 col-md-3 col-12 responsive_sidebar sticky_right</attribute>
        </xpath>
    </template>
</odoo>
