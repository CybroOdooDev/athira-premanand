    <template id="inherit_snippets" inherit_id="web_editor.snippets">
        <xpath expr="//div[@id='o_scroll']/t[@id='default_snippets']" position="after">
            <div id="snippet_animate" class="o_panel">
                <div class="o_panel_header">About Us</div>
                <div class="o_panel_body">
                    <t t-snippet="theme_mars.pie_chart"/>
                    <t t-snippet="theme_mars.bur_now"/>
                    <t t-snippet="theme_mars.work_section"/>
                    <t t-snippet="theme_mars.company_skill"/>
                    <t t-snippet="theme_mars.banner"/>
                    <t t-snippet="theme_mars.team"/>
                    <t t-snippet="theme_mars.about_section"/>
                    <t t-snippet="theme_mars.partners"/>
                    <t t-snippet="theme_mars.quates"/>
                    <t t-snippet="theme_mars.carousel"/>
                    <t t-snippet="theme_mars.event_snippet"/>
                </div>
            </div>
        </xpath>
    </template>

</odoo>