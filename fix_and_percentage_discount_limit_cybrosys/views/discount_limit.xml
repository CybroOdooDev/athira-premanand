<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="view_users_form_inherits" model="ir.ui.view">
            <field name="name">res.users.form.inherits</field>
            <field name="model">res.users</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='preferences']" position="after">
                    <page string="Discount Limit" name="discount_limit">
                        <group>
                            <field name="fixed_limit" string="Fixed Limit"/>
                            <field name="percentage_limit" string="Percentage Limit"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>
</odoo>
