<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="multi_company_sign" model="ir.ui.view">
        <field name="name">multi company sign</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page[@name='other_information']" position="inside">
                <field name="limit_type" widget="radio" string="Limit Type"/>
            </xpath>
        </field>
    </record>
</odoo>
