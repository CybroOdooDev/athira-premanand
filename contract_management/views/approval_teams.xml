<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_approval_teams" model="ir.ui.view">
        <field name="model">approval.teams</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" string="Name"/>
                <field name="company_id" string="Company"/>
                <field name="team_leader_id" string="Team Leader"/>
            </tree>
        </field>
    </record>
    <record id="view_approval_teams_form" model="ir.ui.view">
        <field name="model">approval.teams</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <h1>
                        <field name="name" string="Name"/>
                    </h1>
                    <group>
                        <group>
                            <field name="team_leader_id" string="Team Leader"/>
                            <field name="company_id" string="Company"/>
                        </group>
                        <group>
                        </group>
                    </group>
                    <notebook>
                        <page string="Approver">
                            <field name="approver_line_ids"
                                   mod="tree">
                                <tree string="order lines"
                                      editable="bottom">
                                    <field name="approver_id" string="Approver"/>
                                    <field name="position_id" string="Position"/>
                                    <field name="can_edit" string="Can Edit"/>
                                    <field name="min_amount"
                                           string="Minimum Amount"/>
                                    <field name="max_amount" string="Maximum Amount"/>
                                    <field name="custom_condition" string="Custom Condition Code"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Help">
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="approval_action" model="ir.actions.act_window">
        <field name="name">Contract Approval Teams</field>
        <field name="res_model">approval.teams</field>
        <field name="view_mode">tree,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>
</odoo>
