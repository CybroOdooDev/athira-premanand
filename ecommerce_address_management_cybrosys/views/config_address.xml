<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_address_configuration" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.address</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="20"/>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='website_settings']" position="after">
                <h2>Billing Address Fields</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="phone">
                        <div class="o_setting_left_pane">
                            <field name="phone" widget="boolean_toggle"/>
                            <field name="required_phone" widget="boolean_toggle"/>
                            <field name="street" widget="boolean_toggle"/>
                            <field name="street2" widget="boolean_toggle"/>
                            <field name="city" widget="boolean_toggle"/>
                            <!--                            <field name="default_country_id"/>-->
                            <field name="country" widget="boolean_toggle"/>
                            <field name="zip_code" widget="boolean_toggle"/>
                            <field name="required_zip_code" widget="boolean_toggle"/>
                            <field name="state" widget="boolean_toggle"/>
                            <field name="required_state" widget="boolean_toggle"/>
                        </div>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="phone"/>
                                <br></br>
                                <label for="required_phone"/>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="street"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <br></br>
                                <label for="street2"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="city"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <br></br>
                                <label for="country"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="zip_code"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="required_zip_code"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="state"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="required_state"/>
                                <br></br>
                            </div>
                        </group>

                    </div>
                    <div>
                        <field name="country_id" string="Default Country"/>
                        <label for="country_id"/>
                    </div>
                </div>

                <h2>Shipping Address Fields</h2>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box"
                         id="shipping_phone">
                        <div class="o_setting_left_pane">
                            <field name="shipping_phone" widget="boolean_toggle"/>
                            <field name="shipping_phone_required" widget="boolean_toggle"/>
                            <field name="shipping_street" widget="boolean_toggle"/>
                            <field name="shipping_street_required" widget="boolean_toggle"/>
                            <field name="shipping_street2" widget="boolean_toggle"/>
                            <field name="shipping_city" widget="boolean_toggle"/>
                            <field name="shipping_city_required" widget="boolean_toggle"/>
                            <!--                            <field name="default_country_id"/>-->
                            <field name="shipping_country" widget="boolean_toggle"/>
                            <field name="shipping_zip_code" widget="boolean_toggle"/>
                            <field name="shipping_zip_code_required" widget="boolean_toggle"/>
                            <field name="shipping_state" widget="boolean_toggle"/>
                            <field name="shipping_state_required" widget="boolean_toggle"/>
                        </div>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="shipping_phone"/>
                                <br></br>
                                <label for="shipping_phone_required"/>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="shipping_street"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="shipping_street_required"/>
                                <br></br>
                            </div>
                        </group>

                        <group>
                            <div class="o_setting_right_pane">
                                <br></br>
                                <label for="shipping_street2"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="shipping_city"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="shipping_city_required"/>
                                <br></br>
                            </div>
                        </group>

                        <group>
                            <div class="o_setting_right_pane">
                                <br></br>
                                <label for="shipping_country"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="shipping_zip_code"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="shipping_zip_code_required"/>
                                <br></br>
                            </div>
                        </group>

                        <group>
                            <div class="o_setting_right_pane">
                                <br></br>
                                <label for="shipping_state"/>
                                <br></br>
                            </div>
                        </group>
                        <group>
                            <div class="o_setting_right_pane">
                                <label for="shipping_state_required"/>
                                <br></br>
                            </div>
                        </group>
                    </div>
                     <div>
                        <field name="shipping_country_id" string="Default Country"/>
                        <label for="shipping_country_id"/>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
